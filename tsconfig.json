{
    
    "compilerOptions": {               
        "target": "es5",
        "module": "system",
        "moduleResolution": "node",
        "sourceMap": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,         
        "listFiles": true,     
        "declaration": true       
    },
    "exclude": [
        "node_modules", 
        "bower_components",
        "assets",
        "wwwroot",
        "./typings/main",
        "./typings/main.d.ts",
        "./typings/app-ts.d.ts"
    ]

}